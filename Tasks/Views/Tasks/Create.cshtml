@model Tasks.Models.Task

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Closed" />
    <div class="row">
        <div class="col-12 col-md-8">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="AssigneeId" class="control-label"></label>
                <select asp-for="AssigneeId" class="form-control" asp-items="ViewBag.AssigneeId"><option value="" selected>None</option></select>
                <span asp-validation-for="AssigneeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MilestoneId" class="control-label"></label>
                <select asp-for="MilestoneId" class="form-control" asp-items="ViewBag.MilestoneId"><option value="" selected>None</option></select>
                <span asp-validation-for="MilestoneId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="cleafix">
        <div class="float-left">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
        <div class="float-right">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
